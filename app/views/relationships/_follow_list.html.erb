<div class='col-md-8 offset-md-1'>
  <table class="table">
    <thead>
      <tr>
      <% if user.exists? %>
        <th>image</th>
        <th>name</th>
        <th colspan="5"></th>
      </tr>
    </thead>
    <tbody>
       <% user.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(40, 40), class: "attachment user profile_image fallback" %></td>
        <td><%= user.name %></td>
        <td>フォロー数: <%= user.followings.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>
        <td><%= link_to "show", user_path(user.id) %></td>
        <% end %>
      <% else %>
        <td>ユーザーはいません</td>
      <% end %>
      </tr>
    </tbody>
  </table>
</div>