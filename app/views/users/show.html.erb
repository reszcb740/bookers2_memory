<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(63, 63), class: "attachment user profile_image fallback" %>
       <table class="table">
         <tbody>
           <tr></tr>
           <tr>
             <th>name</th>
             <th><%= @user.name %></th>
           </tr>
           <tr>
             <th>introduction</th>
             <th><%= @user.introduction %></th>
           </tr>
           <tr>
             <th>follows</th>
             <th><%= link_to @user.followings.count, user_followings_path(@user.id) %></th>
           </tr>
           <tr>
             <th>followers</th>
             <th><%= link_to @user.followers.count, user_followers_path(@user.id) %></th>
           </tr>
         </tbody>
       </table>
       <div class="row">
         <% if current_user.following?(@user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :destroy, class: "btn btn-info フォローを外す" %>
         <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success フォローする" %>
         <% end %>
       </div>
       <h2 class="mt-3">New Book</h2>
       <%= render 'books/form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <%= render 'books/index', books: @books %>
      <div class="table_width">
        <h2>投稿数の前日比・前週比</h2>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>6日前</th>
              <th>5日前</th>
              <th>4日前</th>
              <th>3日前</th>
              <th>2日前</th>
              <th>1日前</th>
              <th>今日</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @books.created_6days.count %></td>
              <td><%= @books.created_5days.count %></td>
              <td><%= @books.created_4days.count %></td>
              <td><%= @books.created_3days.count %></td>
              <td><%= @books.created_2days.count %></td>
              <td><%= @today_book.count %></td>
              <td><%= @yesterday_book.count %></td>
            </tr>
          </tbody>
        </table>


      </div>
    </div>
  </div>
</div>
