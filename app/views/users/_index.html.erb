<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
     <tr>
       <td>
         <%= link_to user do %>
          <%= image_tag user.get_profile_image(40, 40) %>
         <% end %>
       </td>
       <td><%= user.name %></td>
       <td><%= link_to "Show", user_path(user.id) %></td>
     </tr>
    <% end %>
  </tbody>
</table>